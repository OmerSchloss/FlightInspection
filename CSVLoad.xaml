<Window x:Class="FlightInspection.CSVLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightInspection"
        mc:Ignorable="d"
        Title="CSVLoad" Height="322.009" Width="550">
    <Window.Resources>
        <SolidColorBrush x:Key="Brush1" Color="#FFAE2727"/>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Left" Width="540" >
        <StackPanel.Background>
            <ImageBrush ImageSource="/images/airplane.JPG"/>
        </StackPanel.Background>

        <TextBlock HorizontalAlignment="Center" FontSize ="35" Cursor="None" ><Run  Text="Welcom to Flight Inspection" FontFamily="Impact" FontSize="36"/></TextBlock>
        <TextBlock FontSize ="15" Height="27" Margin="27,40,190,0" TextWrapping="Wrap" Text="Please choose a CSV file for starting the App" FontWeight="Bold"/>
        <TextBox x:Name="textbox_file_path" Height="23" TextWrapping="Wrap" Text="Type your path here" Margin="27,0,200.8,0" RenderTransformOrigin="1.083,0.466" TextChanged="TextChanged"/>
        <Button x:Name ="ChooseFile"  Content="Choose file" Margin="350,-20,119,0" Click="ChooseFileButton"/>
        <Button x:Name ="Continue"  IsEnabled="False" Content="Continue" HorizontalAlignment="Left" Height="24" Margin="465,125,0,0" Width="68" Click="ContinueButton"/>

    </StackPanel>
</Window>
