<Window x:Class="FlightInspection.CSVLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightInspection"
        mc:Ignorable="d"
        Title="CSVLoad" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="Brush1" Color="#FFAE2727"/>
    </Window.Resources>
    <StackPanel IsEnabled="False">
        <TextBlock HorizontalAlignment="Center" FontSize ="35" Cursor="None" Foreground="#FF2B2727" ><Run  Text="Welcom to Flight Inspection" FontFamily="Impact" FontSize="36" Background="#FFFDFDFD"/></TextBlock>

        <TextBlock HorizontalAlignment="Left" FontSize ="15" Height="27" Margin="27,60,0,0" TextWrapping="Wrap" Text="Please enter a CSV Path for starting the App" Width="317" FontWeight="Bold"/>
        <TextBox  Height="23" TextWrapping="Wrap" Text="Type your path here" Margin="27,0,450,0" RenderTransformOrigin="1.083,0.466" TextChanged="TextBox_TextChanged"/>
        <Button Content="Apply" Margin="250,10,450,0" Click="Apply_Button_Click" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Disabled" BorderBrush="#FF707070" OpacityMask="#FF644E4E" >
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF302D2D" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>

    </StackPanel>
</Window>
